<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_linear_layout"
    android:focusableInTouchMode="true"
    tools:context="com.talentstakeaway.salesman_surya.MainActivity">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <EditText android:id="@+id/distributor_search"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:hint="Distributor.."
          android:inputType="textVisiblePassword"
          android:focusableInTouchMode="true"
          android:drawableLeft="@android:drawable/ic_menu_search"/>

      <EditText android:id="@+id/salesman_search"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:hint="Salesman.."
          android:inputType="textVisiblePassword"
          android:focusableInTouchMode="true"
          android:drawableLeft="@android:drawable/ic_menu_search"/>

  </LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from Date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromdate"
        android:paddingLeft="20dp"/>
    <Button
        android:id="@+id/datepicker_btn1"
        android:paddingLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:drawable/ic_menu_my_calendar"/>
    <TextView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO Date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ToDate"
        android:paddingLeft="15dp"/>
    <Button
        android:id="@+id/datepicker_btn2"
        android:paddingLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:drawable/ic_menu_my_calendar"/>

</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myListView"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
         </ListView>
        </LinearLayout>
</LinearLayout>
